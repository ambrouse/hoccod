@model fantaysWeb.Models.SinhVien

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/layout/navbar.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm("Update","About",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <hr />
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" />
    <input type="number" name="Age" value="@Model.Age" placeholder="Age" />
    <input type="text" name="MaLop" value="@Model.MaLop" placeholder="MaLop" />
    <button type="submit">update</button>

}

